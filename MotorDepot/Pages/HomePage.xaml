<Page x:Class="MotorDepot.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MotorDepot"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">
   
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Source="/MotorDepot;component/Images/фонДорога.jpg" Grid.ColumnSpan="2" Width="1400"></Image>

            <Frame Name="frame"></Frame>

            <StackPanel Grid.Column="1" >
                <Button x:Name="btnPublish" Content="Опубликовать" Margin="10" Click="btnPublish_Click"></Button>
                <Button x:Name="btnMyTrips" Content="Мои поездки" Margin="10"></Button>
                <Button x:Name="btnIncoming" Content="Входящие" Margin="10"></Button>
                <Button x:Name="btnProfile" Content="Мой профиль" Margin="10" Click="btnProfile_Click"></Button>
            </StackPanel>
        </Grid>
  
</Page>
