<Window x:Class="MotorDepot.SendFeedbackWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MotorDepot"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Написать отзыв">

    <Grid>
        <StackPanel>
            <StackPanel>
                <TextBlock Text="Отзыв"></TextBlock>
                <TextBox ScrollViewer.VerticalScrollBarVisibility="Visible" Name="tbFeedback" Height="4cm"></TextBox>
            </StackPanel>
            <Button x:Name="btnSend" Content="Отправить" Click="btnSend_Click"></Button>
        </StackPanel>
        
    </Grid>
</Window>
