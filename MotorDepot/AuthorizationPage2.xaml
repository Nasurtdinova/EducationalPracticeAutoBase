<Page x:Class="MotorDepot.AuthorizationPage2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MotorDepot"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage2">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Логин"></TextBlock>
        <TextBlock Text="Пароль" Grid.Row="1"></TextBlock>
        <TextBox x:Name="tbLogin" Grid.Column="1"></TextBox>
        <PasswordBox x:Name="tbPassword" Grid.Column="1" Grid.Row="1"></PasswordBox>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Grid.ColumnSpan="2">
            <Button x:Name="btnLogin" Click="btnLogin_Click" Content="Войти"></Button>
            <Button x:Name="btnRegidtr" Click="btnRegidtr_Click" Content="Зарегистрирооваться"></Button>
        </StackPanel>
    </Grid>
</Page>
